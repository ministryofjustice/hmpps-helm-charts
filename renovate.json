{
  "extends": ["config:base"],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions updates"
    },
    {
      "description": "Group Helm chart updates",
      "matchManagers": ["helm-values", "helm-requirements"],
      "groupName": "Helm chart updates"
    }
  ],
  "github-actions": {
    "enabled": true
  },
  "helm-values": {
    "enabled": true
  },
  "helm-requirements": {
    "enabled": true
  }
}
